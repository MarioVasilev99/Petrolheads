@model Petrolheads.Web.ViewModels.Cars.CarDetailsEditViewModel
@{
    ViewData["Title"] = "Edit Car";
}

<div class="row">

    <div class="col">

        <form enctype="multipart/form-data" asp-area="Administration" asp-controller="ManageCars" asp-action="EditCar" method="Post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Model">Model:</label>
                    <small>(Required)</small>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Year">Year:</label>
                    <small>(Required)</small>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
            </div>

            <input asp-for="Id" value="@Model.Id" class="d-none" />

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Horsepower">Horsepower:</label>
                    <input asp-for="Horsepower" class="form-control" />
                    <span asp-validation-for="Horsepower" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="Torque">Torque:</label>
                    <input asp-for="Torque" class="form-control" />
                    <span asp-validation-for="Torque" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Weight">Weight:</label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label asp-for="TopSpeed">Top Speed:</label>
                    <input asp-for="TopSpeed" class="form-control" />
                    <span asp-validation-for="TopSpeed" class="text-danger"></span>
                </div>
            </div>

            <div class="row ml-1 mb-3 align-items-end">
                <div >
                    <p class="font-weight-bold">Main Car Photo</p>
                    <img src="@Model.MainImageUrl" class="car-image-upload" id="current-main-image"/>
                </div>

                <div class="form-group col-md-4">
                    <label class="main-img-label btn btn-primary m-0" asp-for="MainImage">Change</label>
                    <input asp-for="MainImage" type="file" name="MainImage" class="main-img-input" onchange="loadFile(event)"/>
                    <hr />
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-block btn-primary">Edit Car</button>
            </div>
        </form>
    </div>
</div>

@section scripts {
    <script>

        var loadFile = function(event) {
        var image = document.getElementById('current-main-image');
        image.src = URL.createObjectURL(event.target.files[0]);
        };

    </script>
}