@model Petrolheads.Web.ViewModels.Posts.CreatePostInputModel;
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <form enctype="multipart/form-data" asp-controller="Posts" asp-action="Create" method="Post">
        <div class="form-group">
            <label for="titleInput">Title</label>
            <input type="text" class="form-control" asp-for="Description" name="Description" id="titleInput" placeholder="Post Title...">
        </div>
        <div class="form-group">
            <input asp-for="Images" type="file" name="Images" multiple/>
        </div>
        <button type="submit" class="btn btn-primary">Publish Post</button>
    </form>
</div>