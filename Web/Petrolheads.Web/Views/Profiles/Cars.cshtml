@model Petrolheads.Web.ViewModels.Profiles.ProfileCarsViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="fb-profile">
        <img align="left" class="fb-image-lg" src="https://res.cloudinary.com/dnzfktppn/image/upload/v1587670163/cover-image_z1hzzt.png" alt="Profile cover image" />
        <img align="left" class="fb-image-profile thumbnail" src="https://res.cloudinary.com/dnzfktppn/image/upload/c_scale,w_300/v1587669032/profile-pic_qfrn8z.png" alt="Profile image" />
        <div class="fb-profile-text">
            <h1>@Model.UserName</h1>
        </div>
    </div>

    <div class="container">
        <nav class="nav nav-pills nav-fill mb-3 nav-menu">
            <a class="nav-item nav-link active mx-1" asp-controller="Profiles" asp-action="Cars" asp-route-userId="@Model.Id">Cars</a>
            <a class="nav-item nav-link mx-1" asp-controller="Profiles" asp-action="Posts" asp-route-userId="@Model.Id">Posts</a>
            <a class="nav-item nav-link mx-1" asp-controller="Follower" asp-action="All" asp-route-userId="@Model.Id">Followers</a>
        </nav>
    </div>

    <hr>

    <div class="container-fluid d-flex flex-wrap">
        @* Button if collection empty *@
        @if (!Model.Cars.Any() && Model.IsProfileOwner)
        {
            <button type="button" class="btn btn-dark btn-lg btn-block" asp-controller="Cars" asp-action="Create">Add Car</button>
        }
        else
        {
            @foreach (var car in Model.Cars)
            {
                <div class="d-flex flex-wrap border border-info m-1 w-100">
                    <img src="https://images.unsplash.com/photo-1525609004556-c46c7d6cf023?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=200&h=200&q=80" alt="car-image" class="img-thumbnail">
                    <div class="d-inline-block align-self-end">
                        <h2 class="">@car.Model</h2>
                        <p class="">Added on @car.CreatedOn</p>
                    </div>
                </div>
            }
        }
    </div>
</div>


