@model Petrolheads.Web.ViewModels.Cars.AddCarInputModel
@{
    ViewData["Title"] = "Add Car";
}

<div class="container">
    <div class="row header-nav">
        <div class="col">
            <h1 class="text-center font-weight-lighter">Add Car</h1>
            <hr>
        </div>
    </div>

    <div class="row">

        <div class="col">

            <form enctype="multipart/form-data" asp-controller="Cars" asp-action="Create" method="Post">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="MakeId">Make:</label>
                        <small>(Required)</small>
                        <select asp-for="MakeId" asp-items="@Model.Makes" class="form-control">
                            <option>Select Make</option>
                        </select>
                        <span asp-validation-for="MakeId" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Model">Model:</label>
                        <small>(Required)</small>
                        <input asp-for="Model" class="form-control" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Year">Year:</label>
                    <small>(Required)</small>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Horsepower">Horsepower:</label>
                        <input asp-for="Horsepower" class="form-control" />
                        <span asp-validation-for="Horsepower" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="Torque">Torque:</label>
                        <input asp-for="Torque" class="form-control" />
                        <span asp-validation-for="Torque" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Weight">Weight:</label>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-6">
                        <label asp-for="TopSpeed">Top Speed:</label>
                        <input asp-for="TopSpeed" class="form-control" />
                        <span asp-validation-for="TopSpeed" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="MainImage">Main Car Photo:</label>
                    <input asp-for="MainImage" type="file" name="MainImage" class="form-control-file" />
                </div>

                <div>
                    <button type="submit" class="btn btn-block btn-primary">Add Car</button>
                </div>

            </form>

        </div>

    </div>
</div>
